<!DOCTYPE html>
<html lang="en">
<head>
    <title>ESD::<%=title%></title>
    <%- include('./partials/header'); -%>
    <script>
        $('.select2').select2();
    </script>
    <script>
        function addUser(first, last)
        {
        alert("Hello " + first);
        }
    </script>
</head>
<body style="width:100%;border:5px solid rgb(145, 38, 38);">
    <%- include('./partials/nevbar'); -%>

    <div class="container" style="margin-top:20px;">
        <div class="row">
            <form class="col-md-2" id="country_name">
                <select class="form-control select2">
                <option>Country</option>
                <option>India</option>
                <option>Australia</option>
                <option>West Indies</option>
                <option>South Africa</option>
                <option>England</option>
                <option>New Zealand</option>
                <option>Pakistan</option>
                <option>Sri Lanka</option>
                <option>Netherlands</option>
                <option>Bangladesh</option>
                <option>Zimbabwea</option>
                <option>Afghanistan</option>
                </select>
            </form>
            <form class="col-md-2" id="team_name">
                <select class="form-control select2">
                <option>Team</option>
                <option>Chennai Super Kings</option>
                <option>Royal Challengers Bangalore</option>
                <option>Kolkata Knight Riders</option>
                <option>Mumbai Indians</option>
                <option>Kings XI Punjab</option>
                <option>Rajasthan Royals</option>
                <option>Sunrisers Hyderabad</option>
                <option>Delhi Daredevils</option>
                <option>Kochi Tuskers Kerala</option>
                <option>Pune Warriors</option>
                <option>Rising Pune Supergiants</option>
                <option>Gujarat Lions</option>
                <option>Deccan Chargers</option>
                </select>
            </form>
            <form class="col-md-2">
                <select class="form-control select2">
                <option>Select</option> 
                <option>Car</option> 
                <option>Bike</option> 
                <option>Scooter</option> 
                <option>Cycle</option> 
                <option>Horse</option> 
                </select>
            </form>
            <form class="col-md-2">
                <select class="form-control select2">
                <option>Select</option> 
                <option>Car</option> 
                <option>Bike</option> 
                <option>Scooter</option> 
                <option>Cycle</option> 
                <option>Horse</option> 
                </select>
            </form>
            <form class="col-md-1">
                <input type="submit" value="Submit" onclick="addUser(document.getElementById('country_name').value,'right')">
            </form>

        </div>
    </div>
    <br>
    <div style="text-align:center">
        <h1><%=pdata.player_name %></h1>
        <h2><%=pdata.batting_hand %></h2>
        <h2><%=pdata.bowling_skill %></h2>
        <h2><%=pdata.country_name %></h2>
    </div>
    <br>
    <h4>Title : <%=title%> </h4>
    <div class="center">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Team ID</th>
                <th scope="col">Team Name</th>
                </tr>
            </thead>
            <tbody>
                <% let i=1 %>
                <% resTable.forEach(function(posts){ %>
                    <tr>
                        <th scope="row"><%=i%></th>
                        <td><%= posts.team_id %></td>
                        <td><%= posts.team_name %></td>
                    </tr>
                    <% i = i+1 %>
                <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
<%- include('./partials/script'); -%>
</html>