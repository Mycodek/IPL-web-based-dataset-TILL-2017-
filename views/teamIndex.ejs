<!DOCTYPE html>
<html lang="en">
<head>
    <title>Teams</title>
    <%- include('./partials/header'); -%>
    <script>
        $('.select2').select2();
    </script>
    <style>
    tbody {
    display:block;
    height:650px;
    overflow:auto;
    }
    thead, tbody tr {
        display:table;
        width:100%;
        table-layout:fixed;/* even columns width , fix width of table too*/
    }
    thead {
        width: calc( 100% - 1em )/* scrollbar is average 1em/16px width, remove it from thead width */
    }
    </style>
</head>
<body style="width:100%;">
    <%- include('./partials/nav/Tnav'); -%>

    <div class="container" style="margin-top:20px;">
        <form class="col-md" action="/search-season-wise" method="POST">
            <select class="form-control select2" name="name">
            <option><%= seasonYr %></option>
            <% if(seasonYr != "All Season") {%>
                <option>All Season</option>
            <% } %>
            <% allSeason.forEach(function(yr){ %>
                <option><%=yr.season_year%></option>
            <% }) %>
            </select>
            <button class="form-control select2 btn btn-outline-success my-2 my-sm-0"
                style="background-color:#daf0b1"
            type="submit">Search</button>
        </form>
    </div>
    <br>
    <div class="center">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Team Name</th>
                </tr>
            </thead>
            <tbody>
                <% let i=1 %>
                <% resTable.forEach(function(posts){ %>
                    <tr>
                        <th scope="row"><%=i%></th>
                        <td><a class="nav-link" href='./TeamData/<%= posts.team_name%>'>
                            <h6 style="color:#426b7d;"> <%= posts.team_name %> </h6></a></td>
                    </tr>
                    <% i = i+1 %>
                <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
<%- include('./partials/script'); -%>
</html>