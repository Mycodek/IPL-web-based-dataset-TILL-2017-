<!DOCTYPE html>
<html lang="en">
<head>
    <title>ESD::<%=title%></title>
    <%- include('./partials/header'); -%>
    <script>
        $('.select2').select2();
    </script>
</head>
<body style="width:100%;border:5px solid rgb(145, 38, 38);">
    <%- include('./partials/teamNevbar'); -%>

    <div class="container" style="margin-top:20px;">
        <div class="row">
            <form class="col-md-2">
                <select class="form-control select2">
                <option>Select Year</option>
                <% allSeason.forEach(function(yr){ %>
                    <option><%=yr.season_year%></option>
                <% }) %>
                </select>
            </form>
            <form class="col-md-1">
                <input type="submit" value="Submit" onclick="addUser(document.getElementById('country_name').value,'right')">
            </form>
        </div>
    </div>
    <h4>Title : <%=title%> </h4>
    <div class="center">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">Team ID</th>
                <th scope="col">Team Name</th>
                </tr>
            </thead>
            <tbody>
                <% let i=1 %>
                <% resTable.forEach(function(posts){ %>
                    <tr>
                        <th scope="row"><%=i%></th>
                        <td><%= posts.team_id %></td>
                        <td><%= posts.team_name %></td>
                    </tr>
                    <% i = i+1 %>
                <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
<%- include('./partials/script'); -%>
</html>